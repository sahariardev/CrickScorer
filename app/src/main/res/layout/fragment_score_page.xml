<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sahariar.star.crickscorer.ScorePage"
    android:weightSum="1">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:layout_weight="0.91">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/listRuns"
                android:layout_width="match_parent"
                android:transcriptMode="alwaysScroll"
                android:stackFromBottom="true"
                android:layout_height="267dp" >


            </ListView>

            <TextView
                android:id="@+id/scoreText"
                android:textColor="@color/colorAdvanceDark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:text="No run"
                android:textAlignment="center"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/batsmanName"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Not selected" />

                <TextView
                    android:id="@+id/ballerName"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Not selected" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:weightSum="3">

        <Button
            android:id="@+id/buttonforupdatescore"
            style="@style/raisedButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Update" />

        <Button
            android:id="@+id/delete"
            style="@style/raisedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete" />

        <Button
            android:id="@+id/declare"
            style="@style/raisedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Declare" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:weightSum="3">

        <Button
            android:id="@+id/selectBatsman"
            style="@style/raisedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Batsman" />

        <Button
            android:id="@+id/selectBaller"
            style="@style/raisedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Baller" />
        <Button
            android:id="@+id/showSummery"
            style="@style/raisedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Summery" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:weightSum="2">

        <Button
            android:id="@+id/selectTeam"
            style="@style/raisedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Team"
            android:layout_weight="1" />

        <Button
            android:id="@+id/selectedOver"
            style="@style/raisedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Over" />
    </LinearLayout>

</LinearLayout>
